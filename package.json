{
  "name": "easycue",
  "version": "0.1.0",
  "author": "David Hoare",
  "description": "Lighting console and sound playback",
  "url": "https://davidhoare.net/easycue/",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/davidroberthoare/easycue",
  "keywords": [
    "lighting",
    "sound",
    "dmx",
    "theatre"
  ],
  "license": "CC0-1.0",
  "productName": "EasyCue",
  "dependencies": {
    "dmx": "^0.2.5",
    "electron-store": "^8.0.1",
    "universal-analytics": "^0.5.3"
  },
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7"
  },
  "build": {
    "appId": "com.easycue.app",
    "copyright": "Copyright Â© year ${author}",
    "win": {
      "target": "nsis",
      "icon": "images/drhmedia.ico"
    },
    "extraResources": [
      {
        "from": "resources/showfiles",
        "to": "showfiles"
      }
      ,{
        "from": "resources/sounds",
        "to": "sounds"
      }
    ]
  }
}
